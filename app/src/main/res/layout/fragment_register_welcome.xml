<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkerBlue"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoText="false"
        android:paddingLeft="10dp"
        android:paddingTop="55dp"
        android:text="Welcome!"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="25dp"
        android:singleLine="false"
        android:text="Before creating your account for AdVantage We're going to ask a few questions. Your privacy is very important to us so all your data will be kept safe. Once you complete this form your information will not be accessable to any human or computer. \n\nNow that that's out of the way lets get started!"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

</LinearLayout>